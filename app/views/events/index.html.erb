<p id="notice"><%= notice %></p>

<h2>Hazard / Issue</h2>
<div class="row">
<div class="col-xs-3 col-xs-offset-2">
<%= link_to 'New Event', new_event_path, :class =>"btn-sm btn-info" %>
</div>
</div>
<br>
<div class="row"> 
  <div class="col-xs-11">
   <table class="table table-bordered">
   <tr>
   <th>Date</th>
   <th>Event Source</th>
   <th>RAC</th>
   <th>Status</th>
   <th>Company</th>
   <th>Deficiency</th>
   <th>Corrective Action</th>
   <th>Responsible party</th>
   <th>Target Closed Date</th>
   <th>Actual Closed Date</th>
   </tr>
   <% @events.each do |event| %>
  <tr>

        <td><%= event.date %></td>
        <td><%= event.eventSource %></td>
        <td><%= event.rac %></td>
        <td><%= event.status %></td>
        <td><%= event.company.name%></td>
        <td><%= event.deficiency %></td>
        <td><%= event.correctiveAction %></td>
        <td><%= event.employee :to_s %></td>
        <td><%= event.targetDate %></td>
        <td><%= event.closedDate %></td>
        
        
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <%# <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %> <%# </td> %>
      </tr>
      <% end %>
  
</table>
</div>
</div> <!-- row div -->





