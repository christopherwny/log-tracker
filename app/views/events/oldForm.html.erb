<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
   <%=f.label :company_id, 'Company Name' %>
   <%=f.collection_select(:company_id, Company.all, :id, :name, prompt: true) %>
   </div>
  <div class="field">
    <%= f.label :Employee, 'Responsible party' %><br>
    <%#<%= f.text_field :responsibleParty %>
    <%=f.collection_select(:employee_id, Employee.all, :id, :lName, prompt: true) %>
  </div>

  <div class="field">
    <%= f.label :issuer %><br>
    <%= f.text_area :issuer %>
  </div>

   
  <div class="field">
    <%= f.label :deficiency %><br>
    <%= f.text_area :deficiency %>
  </div>
  <div class="field">
    <%= f.label :affectedArea %><br>
    <%= f.text_area :affectedArea %>
  </div>
  <div class="field">
    <%= f.label :eventSource %><br>
   <%# <%= f.text_field :eventSource %>
    <%= f.select(:eventSource, Event.eventSourceSelection) %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
